<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:background="#FFFFFF" 
  android:weightSum="1">
  
    <LinearLayout 
         android:id="@+id/linearLayout1" 
         android:gravity="center_vertical|center_horizontal" 
         android:background="#000000" 
         android:layout_height="40dp" 
         android:layout_width="225dp">
         
        <ImageView 
                  android:layout_width="wrap_content"
	              android:layout_height="wrap_content" 
	              android:src="@drawable/next_arrow_dialog_add_contacts"
	              android:id="@+id/imageView1">
	    </ImageView>
        
        <TextView 
                  android:layout_height="wrap_content" 
                  android:textAppearance="?android:attr/textAppearanceLarge" 
                  android:id="@+id/textView1" 
                  android:layout_marginLeft="5dp" 
                  android:layout_marginTop="2dp" 
                  android:textColor="#FFFFFF" 
                  android:layout_width="fill_parent" 
                  android:paddingBottom="5dp" 
                  android:textSize="24dp" android:text="  Người thân">
         </TextView>
         
         
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/linearLayout2"
		android:layout_height="wrap_content" 
		android:weightSum="1" 
		android:layout_marginTop="10dp" 
		android:layout_width="225dp">
		
		<TableLayout 
		    android:id="@+id/tableLayout1"
			android:layout_marginTop="10dp" 
			android:layout_weight="0.92" 
			android:layout_marginLeft="15dp"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content">
			
			<TableRow 
			    android:layout_height="wrap_content" 
			    android:id="@+id/tableRow1"
				android:layout_width="wrap_content" 
				android:gravity="center_vertical">
				
				<ImageView 
				    android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:src="@drawable/bill_gate"
					android:layout_marginTop="1dp" 
					android:id="@+id/img_status_online">
				</ImageView>
					
				<TextView 
				    android:id="@+id/textView2"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:gravity="center" 
					android:layout_width="fill_parent"
					android:textColor="#000000" 
					android:text="Bill Gate"
					android:layout_height="wrap_content" 
					android:layout_marginLeft="15dp">
				</TextView>
				
			</TableRow>
			
			<View 
			    android:layout_height="1sp" 
			    android:layout_width="197dp"
				android:background="@drawable/shape" 
				android:layout_marginTop="10dp" 
				android:layout_marginBottom="10dp">
			</View>
			
			<TableRow 
			    android:layout_height="wrap_content" 
			    android:id="@+id/tableRow2"
				android:layout_width="wrap_content" 
				android:gravity="center_vertical">
				
				<ImageView 
				    android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:layout_marginTop="1dp"
					android:id="@+id/img_status_busy" 
					android:src="@drawable/bill_laden">
				</ImageView>
				<TextView 
				    android:textColor="#000000" 
				    android:gravity="center"
					android:layout_marginLeft="15dp" 
					android:layout_height="wrap_content"
					android:layout_width="fill_parent" 
					android:id="@+id/TextView01"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:text="Bill Laden">
				</TextView>
			</TableRow>
			
			<View 
			    android:layout_height="1sp" 
			    android:layout_width="197dp"
				android:background="@drawable/shape" 
				android:layout_marginTop="10dp" 
				android:layout_marginBottom="8dp">
			</View>
				
			<TableRow 
			    android:layout_height="wrap_content" 
			    android:id="@+id/tableRow3"
				android:layout_width="wrap_content" 
				android:gravity="center_vertical">
				
				<ImageView 
				    android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:layout_marginTop="1dp"
					android:src="@drawable/obama" 
					android:id="@+id/img_status_be_right_back">
				</ImageView>
					
				<TextView 
				    android:textColor="#000000" 
				    android:gravity="center"
					android:layout_marginLeft="15dp" 
					android:layout_height="wrap_content"
					android:layout_width="fill_parent" 
					android:id="@+id/TextView02"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:text="Obama">
				</TextView>
				
			</TableRow>
			<View 
			    android:layout_height="1sp" 
			    android:layout_width="197dp"
				android:background="@drawable/shape" 
				android:layout_marginTop="10dp" 
				android:layout_marginBottom="8dp">
			</View>
				
			<TableRow 
			    android:layout_height="wrap_content" 
			    android:id="@+id/tableRow3"
				android:layout_width="wrap_content" 
				android:gravity="center_vertical">
				
				<ImageView 
				    android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:layout_marginTop="1dp"
					android:src="@drawable/steve_jobs" 
					android:id="@+id/img_status_be_right_back">
				</ImageView>
					
				<TextView 
				    android:textColor="#000000" 
				    android:gravity="center"
					android:layout_marginLeft="15dp" 
					android:layout_height="wrap_content"
					android:layout_width="fill_parent" 
					android:id="@+id/TextView02"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:text="Steve_jobs">
				</TextView>
				
			</TableRow>
			
		</TableLayout>
		
		<RadioGroup 
		    android:id="@+id/radioGroup1"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_marginTop="4dp" 
			android:layout_marginRight="2dp">
			
			<RadioButton 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:id="@+id/rd_billGate">
			</RadioButton>
			
			<RadioButton 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:id="@+id/rd_billladen">
			</RadioButton>
			
			<RadioButton 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:id="@+id/rd_obama">
			</RadioButton>
			<RadioButton 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:id="@+id/rd_steve">
			</RadioButton>
			
		</RadioGroup>
		
	</LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/LinearLayout01" 
        android:orientation="vertical" 
        android:gravity="center" 
        android:layout_marginTop="20dp"
        android:background="#91B0BF" 
        android:layout_height="45dp" 
        android:layout_width="225dp">
        
        <Button 
              android:text="Chọn người trợ giúp" 
              android:layout_width="wrap_content" 
              android:layout_marginTop="3dp" 
              android:layout_height="38dp" 
              android:id="@+id/btn_chon_tro_giup">
        </Button>
              
    </LinearLayout>
    
</LinearLayout>
